{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "sourceMap": true,
        "outDir": "dist/",
        "moduleResolution": "node",
        "watch": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/**.*",
        "src/**.*"
    ],
    "compileOnSave": true
}